<form bindsubmit="formSubmit">
  <view class="container">
    <view class ="h1">Add new item</view>
    <view class="section">
      <view class="section__title">Item</view>
      <input name="name" value="{{name}}" placeholder="" />
      <!-- change to the picker component for tags -->
      <view class="section__title">Category</view>
      <view wx:for="{{tags}}" wx:for-item="tag"></view>
      <input name="name" value="{{tag[0].name}}" placeholder="" />

      <view class="section__title">Purchase date</view>
      <input name="purchase_date" value="{{purchase_date}}" placeholder="" />
      <button form-type="submit" class='add-btn'>Put in fridge!</button>
    </view>
  </view>
</form>
