  align-items: center;
  font-size: 35rpx;
}

.tip-title {
  font-weight: bolder;
  text-align: center;
}

.tip {
  margin-top: 12rpx;
  margin-top: 10rpx;
  text-shadow: 1rpx 1rpx 3rpx rgba(0,0,0,0.2);
  font-size: 40rpx;
  color: white;
  /* font-weight: bold; */
  margin-bottom: 25rpx;
  text-align: center;
}