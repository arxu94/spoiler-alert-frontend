.headers {
  margin-left: 12px;
}
.h1 {
  margin-top: 140rpx;
  text-shadow: 1rpx 1rpx 3rpx rgba(0,0,0,0.2);
  font-size: 70rpx;
  color: white;
  font-weight: bolder;
  margin-bottom: 25rpx;
}

.h2{
  margin-top: 45rpx;
  font-size: 45rpx;
  text-shadow: 1rpx 1rpx 5rpx rgba(0,0,0,0.2);
  color: #ffffff;
  margin-bottom: 25rpx;
  margin-top: 50rpx;
}

.banner {
  background-repeat:no-repeat; 
  background-size: cover; 
  background-position: center;
  padding: 50rpx 20rpx;
  background-attachment: fixed;
  /* margin-left: 10px; */
}

.buttons {
  /* margin-bottom: 10px; */
  /* margin-top: 100rpx; */
  margin: 100rpx 70rpx;
  display: flex;
  justify-content: space-between;
}

.buttons > .one {
  display: flex;
  background-color: #F88B26;
  color: white;
  /* height: 120px; */
  width: 250rpx;
  height: 250rpx;
  border: solid 5rpx #ED984A;
  /* box-shadow: 0 0 4rpx; */
  box-shadow: 0 0 5rpx #ED984A;
  justify-content: center;
  align-items: center;
  font-size: 35rpx;
}
.buttons > .two {
  display: flex;
  background-color: #F88B26;
  color: white;
