.expired {
  color: red !important;
  filter: brightness(85%);
}

.warn {
  color: orange !important;
  filter: brightness(80%);
}

.header > .h1 {
  margin-left: 60rpx;
}

.header {
  display: flex;
  align-items: center;
  position: sticky;
  top: 0;
  background: #FFF1E8;
  flex-wrap: wrap;
  z-index: 1;
}

.btn-to-form {
  margin-left: auto;
  margin-right: 32rpx;
  margin-bottom: auto;
  padding: 10px;
  width: 235rpx;
  border: solid 4rpx #f8983e;
  box-shadow: 0 0 8rpx rgba(0,0,0,0.3);
  border-radius: 10rpx;
  color: rgb(241, 241, 241);
  background-color: #F88B26;
  
}

.body{
  margin-top: 50rpx;
  padding: 0 32rpx;

}

.card-food {
  color: #333;
  overflow: hidden;
  height: 80px;
  background:#FFFFFF;
  box-shadow: 0 0 15px rgba(0,0,0,0.3);
  display: flex;
  justify-content: space-around;
  align-items: center;
  border-radius: 5px;
  padding-left: 8px;
  padding-right: 5px;
  padding-bottom: 3px;
  padding-top: 2px;
  margin-bottom: 10px;
}

.food-info {
  width: 300rpx;
  margin-right: auto;
  
}

.toggle {
  font-size: 45rpx;
  margin-right: 10rpx;
 color: #F88B26;
}

.food-item-name {
  font-size: 20px;
  font-weight: 700;
}

.icon {
  height: 75%;
  width: 40px;
  object-fit: cover;
  padding-left: 5px;
  padding-right: 5px;
}

.shelf-life {
  font-size: 10px;
  color: rgb(61, 60, 60);
  font-weight: 600;
}

.generate {
  width: auto;
  margin-top: 40rpx;
  margin-bottom: 80rpx;
  background-color: #F88B26;
  color: rgb(241, 241, 241);
}

