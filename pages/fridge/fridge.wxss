.expired {
  color: red !important;
  filter: brightness(85%);
}

.warn {
  color: orange !important;
  filter: brightness(80%);
}



.header {
  display: flex;
  align-items: center;
  position: sticky;
  top: 0;
  background: #FFF1E8;
  flex-wrap: wrap;
  z-index: 1;
}

.btn-to-form {
  margin-left: auto;
  margin-bottom: -30px;
  font-size: 15px;
  padding: 10px;
  width: 230rpx;
  border: solid 4rpx #f8983e;
  box-shadow: 0 0 8rpx rgba(0,0,0,0.3);
  border-radius: 10rpx;
  color: rgb(241, 241, 241);
  background-color: #F88B26;
  text-align: center;
}

.body{
  margin-top: 50rpx;
  padding: 0 32rpx;

}

.card-food {
  color: #333;
  overflow: hidden;
  height: 80px;
  background:#FFFFFF;
  box-shadow: 4px 4px 8px rgba(0,0,0,0.2);
  display: flex;
  justify-content: space-around;
  align-items: center;
  border-radius: 5px;
  padding: 16rpx;
  /* padding-left: 8px;
  padding-right: 5px;
  padding-bottom: 3px;
  padding-top: 2px; */
  margin: 32rpx 0;
}

.card-expired {
  border: 1px solid red;
}

.card-warn {
  border: 1px solid orange;
  /* filter: brightness(85%); */
}

.food-info {
  width: 300rpx;
  margin-right: auto;
  
}

.toggle {
  font-size: 50rpx;
  margin-right: 10rpx;
 color: #F88B26;
}

.food-item-name {
  font-size: 20px;
  font-weight: 700;
}

.icon {
  height: 75%;
  width: 50px;
  object-fit: cover;
  padding-left: 5px;
  padding-right: 13px;
}

.shelf-life {
  font-size: 10px;
  color: rgb(61, 60, 60);
  font-weight: 600;
}

.generate {
  width: 45%;
  height: 88rpx;
  /* margin-top: 30rpx;
  margin-bottom: 80rpx; */
  text-align: center;
  display: inline-flex;
  justify-content: center;
  align-items: center;
  /* border: solid 4rpx #f8983e; */
  box-shadow: 0 0 8rpx rgba(0,0,0,0.3);
  border-radius: 10rpx;
  /* margin-bottom: 5px; */
  font-size: 15px;
  margin: 0 30rpx;
  font-weight: bolder;
}

.btn-orange {
  background-color: #F88B26;
  color: rgb(241, 241, 241);
}

.btn-ghost {
  background-color: #fdfdfd;
  color: #f8983e;
}

.delete-icon {
  width: 18px;
  height: 18px;
  color: white;
  filter: brightness(80%);
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  padding-left: 5px;
  padding-right: 10px;
}

.box {
  display: flex;
  width: 100%;
  justify-content: space-between;
  padding: 32rpx 0;
}

.home-button {
  margin: auto 0;
  border: solid 4rpx #f8983e;
  box-shadow: 0 0 8rpx rgba(0,0,0,0.3);
  border-radius: 10rpx;
  color: rgb(241, 241, 241);
  background-color: #F88B26;
  text-align: center;
  display: block;
  margin: auto;
  width:20%;
  border-radius: 50%;
  position: sticky;
  flex-wrap: wrap;
  z-index: 1;
  bottom: 0;
}

.home-button-icon {
  height: 20px;
  width: 20px;
  text-align: center;
  align-items: center;
}