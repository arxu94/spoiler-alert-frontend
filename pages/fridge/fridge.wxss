/* pages/fridge/fridge.wxss */

page {
  background-color: #FFF1E8;
  box-sizing: border-box;
}

.h1 {
  padding: 0 32rpx;
  width: 100%;
  height: 120rpx;
  /* text-align: center; */
  /* margin: 20px; */
  font-weight: bold;
  font-size: 45rpx;
  text-shadow: 1rpx 1rpx 3rpx rgba(0,0,0,0.2);
  /* color: black; */
  display: flex;
  align-items: center;
  position: sticky;
  top: 0;
  background: #FFF1E8;
}

.body{
  margin-top: 50rpx;
  padding: 0 32rpx;

}

.card-food {
  color: #333;
  overflow: hidden;
  height: 80px;
  background:#FFFFFF;
  box-shadow: 0 0 15px rgba(0,0,0,0.3);
  display: flex;
  align-items: flex-start;
  border-radius: 10px;
  padding: 5px;
  /* padding-top: 10px; */
  /* margin-left: 10px; */
  /* margin-right: 10px; */
  margin-bottom: 10px;
  justify-content: space-between;

}
.food-info {
  display: flex;
  /* justify-content: space-between; */
  /* flex-direction: row; */
}

.toggle {
  font-size: 80rpx;
  justify-self: flex-end;
}
.food-item-name {
  margin-left: 2px;
  font-size: 15px;
  font-weight: bold;
  
}

.icon {
  flex-grow: 1;
  height: 100%;
  width: 80px;
  object-fit: cover;
}

.shelf-life {
  font-size: 10px;
  color: gray;
}

.generate {
  width: auto;
  margin-top: 40rpx;
  margin-bottom: 80rpx;
  background-color: #F88B26;
  color: white;
}

.text {
  align-self: flex-start;
  padding: 12rpx;
  /* flex: 1 0 0; */
  /* width: 200rpx; */
  flex-grow: 6;
}